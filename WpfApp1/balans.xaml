<Window x:Class="WpfApp1.balans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="balans" Height="450" Width="800" Background="#111111">
    <Grid>
        <!-- Заголовок страницы -->
        <Label Content="Баланс по карте" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20"/>

        <!-- Текстбокс для отображения баланса -->
        <TextBox x:Name="BalanceTextBox" HorizontalAlignment="Center" VerticalAlignment="top" Width="200" Height="30" Margin="0,60,0,0" Text="{Binding Balance}"/>

        <!-- Кнопка для закрытия окна -->
        <Button Content="Закрыть" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="100" Click="CloseButton_Click"/>
    </Grid>
</Window>
